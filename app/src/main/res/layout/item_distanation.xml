<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="11dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F1F0E8">

        <!-- Image Section -->
        <LinearLayout
            android:id="@+id/backgroundLocation"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/placeholderbackground"
            android:scaleType="fitCenter"
            android:gravity="bottom"
            android:orientation="vertical" />

        <!-- Text Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="16dp"
                android:text="latitude"
                android:textColor="#00757575" />

            <TextView
                android:id="@+id/longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="16dp"
                android:text="longitude"
                android:textColor="#00757575" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                android:scaleType="centerCrop">

                <TextView
                    android:id="@+id/placeloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:fontFamily="@font/googlesans_bold"
                    android:outlineAmbientShadowColor="@color/white"
                    android:shadowColor="#7C7B7B"
                    android:shadowRadius="5.0"
                    android:text="Placeholder"
                    android:textColor="#333"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#151515"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:fontFamily="@font/googlesans"
                    android:outlineAmbientShadowColor="@color/white"
                    android:shadowColor="#7C7B7B"
                    android:shadowRadius="5.0"
                    android:text="Placeholder"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:ellipsize="none"/>
                <!-- Optional: disable ellipsizing -->
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
